# adds color to listing
# because sort does not like escape sequences
#
#===============================================================================
BEGIN {
   red="\033[2;31m"
   yel="\033[2;33m"
   grn="\033[2;32m"
   cyn="\033[2;36m"
   blu="\033[2;34m"
   mag="\033[2;35m"
   wht="\033[2;37m"

   Red="\033[0;31m"
   Yel="\033[0;33m"
   Grn="\033[0;32m"
   Cyn="\033[0;36m"
   Blu="\033[0;34m"
   Mag="\033[0;35m"
   Wht="\033[0;37m"

   RED="\033[1;31m"
   YEL="\033[1;33m"
   GRN="\033[1;32m"
   CYN="\033[1;36m"
   BLU="\033[1;34m"
   MAG="\033[1;35m"
   WHT="\033[1;37m"

   non="\033[0m"
}
#===============================================================================
{
   printf("%-15s",$1)
   switch($2)
   {
      case /Movies/ :
         t="Movies"
         printf(Red)
         break
      case /Videos/ :
         t="Videos"
         printf(Wht)
         break
      case /mini-Series/ :
         t="mini-Series"
         printf(Mag)
         break
      case /Series/ :
         t="Series"
         printf(Blu)
         break
   }
   printf("%s\n"non,$2)
}
#===============================================================================
END {
}
